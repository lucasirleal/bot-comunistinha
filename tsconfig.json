{
    "compilerOptions": {
        "target": "esnext",
        "module": "CommonJS",
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "outDir": "dist"
    },
    "include": [
      "src/**/*",
      "data/**/*"
    ]
}